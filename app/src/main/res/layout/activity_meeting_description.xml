<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeetingDescriptionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/add_meeting_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/btn_gradient_blue"
            android:fontFamily="@font/new_jf"
            android:onClick="editMeeting"
            android:text="حفظ التعديلات"
            android:textColor="@color/new_white_light"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/delete_meeting_btn"
            app:layout_constraintTop_toBottomOf="@+id/meetingDescription_et" />

        <Button
            android:id="@+id/delete_meeting_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_gradient_red"
            android:fontFamily="@font/new_jf"
            android:onClick="deleteMeeting"
            android:text="إلغاء"
            android:textColor="@color/new_white_light"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/add_meeting_btn"
            app:layout_constraintEnd_toStartOf="@+id/add_meeting_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/add_meeting_btn" />

        <EditText
            android:id="@+id/meetingDate_et"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_gray"
            android:drawableEnd="@drawable/calendar"
            android:fontFamily="@font/new_jf"
            android:gravity="center"
            android:hint="@string/choose_date_hint"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textAlignment="center"
            android:textColor="@color/new_text_blue"
            android:textColorHint="@color/new_hint_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/eventDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meetingTypeSpinner" />

        <EditText
            android:id="@+id/meetingTime_et"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_gray"
            android:drawableEnd="@drawable/clock"
            android:fontFamily="@font/new_jf"
            android:gravity="center"
            android:hint="اختار الساعة"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textAlignment="center"
            android:textColor="@color/new_text_blue"
            android:textColorHint="@color/new_hint_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/meetingTime_et2"
            app:layout_constraintTop_toBottomOf="@+id/eventTime" />

        <EditText
            android:id="@+id/meetingTime_et2"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_gray"
            android:drawableEnd="@drawable/clock"
            android:fontFamily="@font/new_jf"
            android:gravity="center"
            android:hint="اختار الساعة"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textAlignment="center"
            android:textColor="@color/new_text_blue"
            android:textColorHint="@color/new_hint_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/meetingTime_et"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventTime" />

        <EditText
            android:id="@+id/meetingDescription_et"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edit_text_gray"
            android:fontFamily="@font/new_jf"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:scrollbars="vertical"
            android:textColor="@color/new_text_blue"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/eventDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meetingTypeSpinner3" />

        <EditText
            android:id="@+id/meetingHead_et"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_gray"
            android:fontFamily="@font/new_jf"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@color/new_text_blue"
            android:textColorHint="@color/new_hint_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/eventNameTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meetingDate_et" />

        <EditText
            android:id="@+id/meetingCount"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_gray"
            android:fontFamily="@font/new_jf"
            android:gravity="center"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/new_text_blue"
            android:textColorHint="@color/new_hint_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/eventNameTV2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meetingTime_et2" />

        <TextView
            android:id="@+id/meetingTypeSpinner"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_gray"
            android:fontFamily="@font/new_jf"
            android:gravity="center"
            android:textColor="@color/new_text_blue"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/eventType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/meetingTypeSpinner2"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_gray"
            android:fontFamily="@font/new_jf"
            android:gravity="center"
            android:textColor="@color/new_text_blue"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/eventType3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meetingCount" />

        <TextView
            android:id="@+id/meetingTypeSpinner3"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_gray"
            android:fontFamily="@font/new_jf"
            android:gravity="center"
            android:textColor="@color/new_text_blue"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/eventType2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meetingTypeSpinner2" />

        <TextView
            android:id="@+id/eventTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/new_jf"
            android:text="الي"
            android:textColor="@color/new_text_black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/meetingTime_et"
            app:layout_constraintEnd_toEndOf="@+id/meetingTime_et2"
            app:layout_constraintStart_toStartOf="@+id/meetingTime_et2"
            app:layout_constraintTop_toTopOf="@+id/eventTime" />

        <TextView
            android:id="@+id/eventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/new_jf"
            android:text="من"
            android:textColor="@color/new_text_black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/meetingTime_et"
            app:layout_constraintStart_toStartOf="@+id/meetingTime_et"
            app:layout_constraintTop_toBottomOf="@+id/meetingHead_et" />

        <TextView
            android:id="@+id/eventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/new_jf"
            android:text="نوع الاجتماع"
            android:textColor="@color/new_text_black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/meetingTypeSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/meetingTypeSpinner" />

        <TextView
            android:id="@+id/eventType2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/new_jf"
            android:text="هدف الاجتماع"
            android:textColor="@color/new_text_black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/meetingTypeSpinner3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/meetingTypeSpinner3" />

        <TextView
            android:id="@+id/eventType3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/new_jf"
            android:text="مكان الاجتماع"
            android:textColor="@color/new_text_black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/meetingTypeSpinner2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/meetingTypeSpinner2" />

        <TextView
            android:id="@+id/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/new_jf"
            android:text="تاريخ الاجتماع"
            android:textColor="@color/new_text_black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/meetingDate_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/meetingDate_et" />

        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/new_jf"
            android:gravity="center"
            android:text="محضر\n الاجتماع"
            android:textAlignment="center"
            android:textColor="@color/new_text_black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/meetingDescription_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/meetingDescription_et" />

        <TextView
            android:id="@+id/eventNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/new_jf"
            android:text="اسم مدير الاجتماع"
            android:textColor="@color/new_text_black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/meetingHead_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/meetingHead_et" />

        <TextView
            android:id="@+id/eventNameTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/new_jf"
            android:text="عدد الحضور"
            android:textColor="@color/new_text_black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/meetingCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/meetingCount" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>