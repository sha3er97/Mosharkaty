<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/border_only_btn"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/meetingType"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/new_jf"
        android:gravity="center"
        android:text="اجتماع"
        android:textAlignment="center"
        android:textColor="@color/new_blue_dark"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meetingType">

        <TextView
            android:id="@+id/reasonTV"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_btn"
            android:drawablePadding="8dp"
            android:fontFamily="@font/new_jf"
            android:gravity="center"
            android:padding="8dp"
            android:text="تحطيط"
            android:textAlignment="center"
            android:textColor="@color/new_white_light"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/reason"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dateTV"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dateTV"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/blue_btn"
            android:drawablePadding="8dp"
            android:fontFamily="@font/new_jf"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/dummy_date"
            android:textAlignment="center"
            android:textColor="@color/new_white_light"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/calendar_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/countTV"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/reasonTV"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/countTV"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/blue_btn"
            android:drawablePadding="8dp"
            android:fontFamily="@font/new_jf"
            android:gravity="center"
            android:padding="8dp"
            android:text="10"
            android:textAlignment="center"
            android:textColor="@color/new_white_light"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/dateTV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>